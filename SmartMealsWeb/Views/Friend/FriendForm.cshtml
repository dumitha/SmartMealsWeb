@model SmartMealsWeb.ViewModel.FriendFormViewModel
@{
    ViewBag.Title = "FriendForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2>New Friend</h2>
@using (Html.BeginForm("Save", "Friend"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")

    <div class="form-group">
        @Html.LabelFor(m => m.Friend.Name)
        @Html.TextBoxFor(m => m.Friend.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Friend.Name)
        
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Friend.Birthdate)
        @Html.TextBoxFor(m => m.Friend.Birthdate, "{0:d MMM yyyy}" ,new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Friend.Birthdate)

    </div>
   
    <div class="form-group">
        @Html.LabelFor(m => m.Friend.MealPlanTypeID)
        @Html.DropDownListFor(m => m.Friend.MealPlanTypeID, new SelectList(Model.MealPlanType, "Id", "Name"), "Select Meal Plan", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Friend.MealPlanType)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GoalSettingId)
        @Html.DropDownListFor(m => m.GoalSettingId, new SelectList(Model.GoalSettings, "Id", "Name"), "Select a Goal", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GoalSettingId)

    </div>

    
    @Html.HiddenFor(m=> m.Friend.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>

}

@section scripts
    {
        @Scripts.Render("~/bundles/jqueryval")
    }
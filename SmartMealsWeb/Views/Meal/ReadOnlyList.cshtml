
@model IEnumerable<SmartMealsWeb.Models.Meal>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Meals</h2>
   
        <table id ="meals"class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Meal</th>
                    <th>Meal Type</th>
                   
                </tr>
            </thead>
            <tbody>
              
            </tbody>
        </table>


        @section scripts
    {
            <script>
       $(document).ready(function () {

           $("#meals").DataTable({
               ajax: {
                   url: "/api/meals",
                   dataSrc: ""
               },
               columns: [
                   {
                       data: "name",
                       
                   },
                   {
                       data: "mealType.name"
                   }  
               ]
           });

      });
    
     </script>
 }
